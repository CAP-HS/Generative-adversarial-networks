import os
from PIL import Image

SQUARE_FIT_SIZE = 28
LOGO_FILENAME = '14_14.jpg'

logoIm = Image.open(LOGO_FILENAME)
logoWidth, logoHeight = logoIm.size

os.makedirs('fitsum', exist_ok=True)
 # Loop over all files in the working directory.
for filename in os.listdir('C:\\Users\\fitsu\\OneDrive\\Documents\\EEGR 491\\mnistasjpg\\testSet'):
    if not (filename.endswith('.png') or filename.endswith('.jpg')) \
       or filename == LOGO_FILENAME:
        continue
    im = Image.open('C:\\Users\\fitsu\\OneDrive\\Documents\\EEGR 491\\mnistasjpg\\testSet\\mytestset\\testSet')
    width, height = im.size
    if width > SQUARE_FIT_SIZE and height > SQUARE_FIT_SIZE:
        if width > height:
            height = int((SQUARE_FIT_SIZE / width) * height)
            width = SQUARE_FIT_SIZE
        else:
            width = int((SQUARE_FIT_SIZE / height) * width)
            height = SQUARE_FIT_SIZE
        print('Resizing %s...' % (filename))
        im = im.resize((width, height))

        print('Adding logo to %s...' % ('C:\\Users\\fitsu\\OneDrive\\Documents\\EEGR 491\\mnistasjpg\\testSet\\mytestset\\testSet'))
        im.paste(logoIm, (width - logoWidth, height - logoHeight), logoIm)

        im.save(os.path.join('fitsim', 'C:\\Users\\fitsu\\OneDrive\\Documents'))
